generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

enum Status {
  pending
  onProgress
  complete
  cancel
}

model User {
  id         Int      @id @default(autoincrement())
  fullname   String
  email      String   @unique
  password   String
  role       Role     @default(user)
  isActive   Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  cart    Cart[]
  profile Profile?

  @@map("users")
}

model Profile {
  id         Int      @id @default(autoincrement())
  pic        String?
  phone      String?
  address    String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  userId Int?  @unique
  user   User? @relation(fields: [userId], references: [id])

  @@map("profiles")
}

model Category {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  product Product[]

  @@map("categorys")
}

model Product {
  id             Int        @id @default(autoincrement())
  name           String
  price          Float
  price_discount Float      @default(0)
  description    String
  stock          Int
  isFlashsale    Boolean    @default(false)
  isFavorite     Boolean    @default(false)
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
  discount       Discount[]

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  images   Product_image[]
  sizes    Size_product[]
  variants Variant[]
  cartItems CartItem[]
  transactionItems Transaction_item[]


  tax Tax?

  rating Rating[]

  @@map("products")
}

model Discount {
  id         Int      @id @default(autoincrement())
  name       String
  discount    Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  productId Int?
  product   Product? @relation(fields: [productId], references: [id])

  @@map("discounts")
}

model Product_image {
  id         Int      @id @default(autoincrement())
  image      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  productId Int?
  product   Product? @relation(fields: [productId], references: [id])

  @@map("product_images")
}

model Size_product {
  id         Int      @id @default(autoincrement())
  name       String
  costs      Float    @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  productId Int?
  product   Product? @relation(fields: [productId], references: [id])

  cartItems CartItem[]
  transactionItems Transaction_item[]

  @@map("size_products")
}

model Variant {
  id         Int      @id @default(autoincrement())
  name       String
  costs      Float    @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  productId Int?
  product   Product? @relation(fields: [productId], references: [id])

  cartItems CartItem[]
  transactionItems Transaction_item[]

  @@map("variants")
}

model Tax {
  id         Int      @id @default(autoincrement())
  name       String
  tax        Float    @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  productId Int?     @unique
  product   Product? @relation(fields: [productId], references: [id])

  @@map("taxs")
}

model Cart {
  id         Int       @id @default(autoincrement())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  items      CartItem[]
  userId     Int?
  user       User?      @relation(fields: [userId], references: [id])

  @@map("carts")
}

model CartItem {
  id         Int      @id @default(autoincrement())
  quantity   Int

  productId  Int?
  product    Product?  @relation(fields: [productId], references: [id])

  sizeId     Int?
  size       Size_product? @relation(fields: [sizeId], references: [id])

  variantId  Int?
  variant    Variant?      @relation(fields: [variantId], references: [id])

  cartId     Int?
  cart       Cart?     @relation(fields: [cartId], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("cart_items")
}


model Delivery {
  id         Int      @id @default(autoincrement())
  name       String
  costs      Float    @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  transactionId Int?          @unique
  transaction   Transactions? @relation(fields: [transactionId], references: [id])

  @@map("deliverys")
}

model Payment_method {
  id         Int      @id @default(autoincrement())
  name       String
  image      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  transactionId Int?          @unique
  transaction   Transactions? @relation(fields: [transactionId], references: [id])

  @@map("payment_methods")
}

model Status_transaction {
  id         Int      @id @default(autoincrement())
  status     Status   @default(pending)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  transactionId Int?          @unique
  transaction   Transactions? @relation(fields: [transactionId], references: [id])

  @@map("status_transactions")
}

model Transactions {
  id            Int      @id @default(autoincrement())
  name_user     String
  address_user  String
  phone_address String
  email_address String
  total         Float
  invoice_num   String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  statusTransaction Status_transaction?
  paymentMethod     Payment_method?
  delivery          Delivery?

  transactionItem Transaction_item[]

  @@map("transactions")
}

model Transaction_item {
  id         Int      @id @default(autoincrement())
  quantity   Int
  subtotal   Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  transactionId Int?
  transaction   Transactions? @relation(fields: [transactionId], references: [id])

 productId     Int?
  product       Product? @relation(fields: [productId], references: [id])

  sizeId        Int?
  size          Size_product? @relation(fields: [sizeId], references: [id])

  variantId     Int?
  variant       Variant? @relation(fields: [variantId], references: [id])

  @@map("transaction_items")
}

model Rating {
  id         Int      @id @default(autoincrement())
  review     String
  rating     Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  productId Int?
  product   Product? @relation(fields: [productId], references: [id])

  @@map("ratings")
}
